<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.home.homesystem.viewModel.OtherMediaViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAudioView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_layout_bg"
                android:onClick="@{viewModel.onAudioBtnPressed}"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivAudioViewImage"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/tvAudioViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Audio"
                        android:textSize="18sp"
                        tools:text="Audio" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivAudioView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/audio_1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llProjectorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_layout_bg"
                android:onClick="@{viewModel.onProjectorBtnPressed}"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivProjectorViewImage"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/tvProjectorViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projector"
                        android:textSize="18sp"
                        tools:text="Projector" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivProjectorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/power" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSearchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_layout_bg"
                android:onClick="@{viewModel.onSearchPressed}"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSearchViewImage"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/tvSearchViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Channel"
                        android:textSize="18sp"
                        tools:text="Channel" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivSearchView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/keyboard_number_1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>